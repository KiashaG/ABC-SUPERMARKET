<body>







    <!-- ======= Product Section ======= -->
    @*Using bootstarp made groovin template (BootstrapMade, 2021)*@
    <section id="contact" class="contact">
        <div class="container">


            <div class="section-title">
                <h2>PRODUCT INFORMATION</h2>
                <p>By completing the information below, you can add a product of your choice to the ABC supermarket platform.</p>
            </div>

            @using (Html.BeginForm("Index", "Product", new { id = Model.RowKey }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form">
                    <form action="forms/contact.php" method="post" role="form" class="php-email-form">

                        <div class="form-group">
                            <label>PRODUCT NAME</label>
                            <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" />
                        </div>

                        <div class="form-group">
                            <label>PRODUCT DESCRIPTION</label>
                            <input type="text" class="form-control" name="ProductDescription" value="@Model.ProductDescription" />
                        </div>

                        <div class="form-group">
                            <label>PRODUCT PRICE</label>
                            <input type="text" class="form-control" name="ProductPrice" value="@Model.ProductPrice" />
                        </div>
                        <div class="form-group">
                            <label>PRODUCT PICTURE</label>
                            <input type="file" class="form-control" name="uploadFile" value="" />
                        </div>


                        <input type="submit" value="Submit" class="btn btn-dark" />


                    </form>
                    <br /> <br />
                    <div>
                        <a href="@Url.Action("Get", "product")"> BACK TO PRODUCT LIST </a>
                    </div>
                </div>
            }


        </div>
    </section>
    <!-- End Product Section -->



